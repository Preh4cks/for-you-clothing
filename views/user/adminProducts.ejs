<!DOCTYPE html> 
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/index.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <title>Admin</title>
    <style>
        form {
            padding: 20px;
            border: 1px solid black;
            width: 400px;
            margin: 20px;
        }
        input, textarea {
            width: 100%;
            padding: 10px 20px;
            border: 1px solid black;
            margin-bottom: 10px;
            background-color: transparent;
        }
        
        .product_list {
            margin: 20px;
            border: 1px solid black;
        }
        .category_list > p {
            padding: 10px 20px;
            border-bottom: 1px solid black;
        }
        table {
          width: 100%;
        }
          table tr {
            border-bottom: 1px solid black;
            display: flex;
          }
          table tr:nth-child(even) {
            background-color: lightgray;
          }
          table td {
            width: 100%;
            padding: 10px 20px;
            border-left: 1px solid black;
            border-right: 1px solid black;
          }
    </style>
</head>
<body>
<a href="/admin" class="black_button">Back</a>
<div class="create_product">
  <form action="/create/product" method="post">
    <h6>Add Product</h6> <br>
    <input type="text" name="name" placeholder="Name">
    <input type="text" name="vendor" placeholder="Brand">
    <input type="number" name="unit_price" placeholder="Base Price">
    <input type="number" name="inventory_count" placeholder="Stocks">
    <input type="text" name="image_url" placeholder="Image URL">
    <textarea name="description" placeholder="Description"></textarea>
    <input type="submit" value="CREATE">
  </form>
</div>

<div class="product_list">
  <h3 style="border-bottom: 1px solid black; padding: 10px 20px;">Products</h3>

  <table>
    <thead>
      <td>ID</td>
      <td>Brand</td>
      <td>Name</td>
      <td>Price</td>
      <td>Discounted Price</td>
      <td>Rating</td>
      <td>Inventory Count</td>
      <td>Quantity Sold</td>
      <td>Edit</td>
      <td>Delete</td>
    </thead>
    <tbody>
    <% for( let i = 0; i < products.length; i++ ) { %>
      <tr>
        <td><%= products[i].id %></td>
        <td><%= products[i].vendor %></td>
        <td><%= products[i].name %></td>
        <td><%= products[i].unit_price %></td>
        <td><%= products[i].discounted_price || products[i].unit_price %></td>
        <td><%= products[i].rating || 2.5 %></td>
        <td><%= products[i].inventory_count%></td>
        <td><%= products[i].quantity_sold || 0 %></td>
        <td><a href="/admin/product/<%= products[i].id %>">Edit</a></td>
        <td><a href="#">Delete</a></td>
      </tr>
    <% } %>
    </tbody>
  </table>
</div>

</body>
</html>